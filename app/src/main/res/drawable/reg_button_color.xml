<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is hovered (mouse is over the button) -->
    <item android:color="@color/my_light_primary" android:state_hovered="true" />
    <!-- State when button is pressed -->
    <item android:color="@color/my_light_primary" android:state_pressed="true" />
    <!-- Default state -->
    <item android:color="@color/reg" />
</selector>
